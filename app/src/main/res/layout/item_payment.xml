<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPaymentOut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="2dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/shape_monthly_reading_gray"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rlPaymentIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item">

        <LinearLayout
            android:id="@+id/lnButtonsBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescriptionPayment"
            android:visibility="gone">

            <Button
                android:id="@+id/btnEditPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Uprav" />

            <Button
                android:id="@+id/btnDeletePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Smazat" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPlatba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tvCislo0"
            android:gravity="end"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/tvDruhPlatby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvCislo0"
            android:layout_toStartOf="@+id/tvPlatba" />

        <TextView
            android:id="@+id/tvDescriptionPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvPlatba" />

        <TextView
            android:id="@+id/tvCislo0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </RelativeLayout>


</RelativeLayout>