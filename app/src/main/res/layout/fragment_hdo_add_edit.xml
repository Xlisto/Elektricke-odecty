<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_hdo_add_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lnButtons">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/lnDatePre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlDaysOut"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDatumPRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlDateOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnDatePre"
                android:background="@drawable/shape_monthly_reading_gray"
                android:padding="2dp">

                <RelativeLayout
                    android:id="@+id/rlDateIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_item">

                    <LinearLayout
                        android:id="@+id/lnDatePickersLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/from"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/until"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnDatePickers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TimePicker
                            android:id="@+id/tpFrom"
                            style="@android:style/Widget.Material.Light.TimePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:timePickerMode="spinner" />

                        <TimePicker
                            android:id="@+id/tpUntil"
                            style="@android:style/Widget.Material.Light.TimePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:timePickerMode="spinner" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnDatePickers"
                        android:orientation="vertical" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDaysOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_monthly_reading_gray"
                android:padding="2dp">

                <RelativeLayout
                    android:id="@+id/rlDaysIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_item">

                    <LinearLayout
                        android:id="@+id/lnDays1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbMonday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/mon" />

                        <CheckBox
                            android:id="@+id/cbTuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/tue" />

                        <CheckBox
                            android:id="@+id/cbWednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/wed" />

                        <CheckBox
                            android:id="@+id/cbThursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/thu" />

                        <CheckBox
                            android:id="@+id/cbFriday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/fri" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnDays2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnDays1"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbSaturday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/sat" />

                        <CheckBox
                            android:id="@+id/cbSunday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:minHeight="48dp"
                            android:text="@string/sun" />


                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lnButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnAddEditHdoBack"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zpet"
            android:textColor="@color/colorButtonText" />

        <Button
            android:id="@+id/btnAddEditHdoSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textColor="@color/colorButtonText" />
    </LinearLayout>
</RelativeLayout>