<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleComparePriceList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/sp_produktova_rada" />

        <Spinner
            android:id="@+id/spRada"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvTitleComparePriceList"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvProdukt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spRada"
            android:text="@string/sp_produkt" />

        <Spinner
            android:id="@+id/spProdukt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvProdukt"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvSazba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spProdukt"
            android:text="@string/sazba_distribuce" />

        <Spinner
            android:id="@+id/spSazba"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvSazba"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvDodavatel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spSazba"
            android:text="@string/sp_dodavatele" />

        <Spinner
            android:id="@+id/spDodavatel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDodavatel"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvUzemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spDodavatel"
            android:text="@string/sp_distribucni_uzemÃ­" />

        <Spinner
            android:id="@+id/spUzemi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvUzemi"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spUzemi"
            android:text="@string/sp_datum_platnosti" />

        <Spinner
            android:id="@+id/spDatum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvDate"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnResetFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/spDatum"
            android:text="@string/filtr_reset" />

    </RelativeLayout>



</ScrollView>
