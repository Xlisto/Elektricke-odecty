<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="cz.xlisto.odecty.modules.backup.BackupFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btnZalohuj"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start|top"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/backup" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBackup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnZalohuj"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layoutAnimation="@anim/layout_animation_fall_down" />

    <Button
        android:id="@+id/btnVynerSlozku"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/select_folder" />

    <LinearLayout
        android:id="@+id/lnProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_progressbar"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pbLoadFiles"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLabelLoadfiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_wait" />
    </LinearLayout>
</RelativeLayout>
