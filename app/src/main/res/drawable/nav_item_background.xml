<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetRight="5dp" android:insetLeft="5dp" android:insetTop="1dp" android:insetBottom="1dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="@color/nav_menu_item_color_pressed" />
            </shape>
        </inset>
    </item>

    <item android:state_checked="true">
        <inset android:insetRight="5dp" android:insetLeft="5dp" android:insetTop="2dp" android:insetBottom="2dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="@color/nav_menu_item_color_checked" />
            </shape>
        </inset>
    </item>


    <item android:state_activated="true">
        <inset android:insetRight="5dp" android:insetLeft="5dp" android:insetTop="2dp" android:insetBottom="2dp">
            <shape android:shape="rectangle">
                <corners android:radius="5dp" />
                <solid android:color="@color/nav_menu_item_color_checked" />
            </shape>
        </inset>
    </item>

    <item android:drawable="@color/nav_menu_background" />

</selector>