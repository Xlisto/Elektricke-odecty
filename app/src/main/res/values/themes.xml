<resources>
    <!-- Base application theme. -->
    <style name="Theme.Odecty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_bar</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/color_bar</item>
        <item name="android:itemBackground">@color/menuBackgroundColor</item>
        <item name="android:dividerHeight">1dp</item>

    </style>

    <style name="Theme.Odecty.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Odecty.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Odecty.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>